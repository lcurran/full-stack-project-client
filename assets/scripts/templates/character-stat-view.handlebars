<div class="row">
  <div class="col-xs-6">
    <table class="table">
      <thead>
        <th>Stat</th>
      </thead>
      <tbody>
        {{#stats}}
          <tr><td>{{name}}</td></tr>
        {{/stats}}
      </tbody>
    </table>
  </div>
  <div class="col-xs-6">
    <table class="table">
      <thead>
        <th>Value</th>
      </thead>
      <tbody>
        {{#character_stats}}
          <tr><td>{{stat_value}}</td></tr>
        {{/character_stats}}
      </tbody>
    </table>
  </div>
</div>
